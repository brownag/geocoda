  url = {https://CRAN.R-project.org/package=mvtnorm},
  note = {R package version 1.2-4. Enables multivariate normal simulation for
          generating ILR realizations. Used internally when simulating from ILR
          covariance structures in gc_sim_composition(). Critical for uncertainty
          propagation and ensemble generation with exact multivariate normal sampling.}
}

