  note = {Spatial data structures for point observations and polygon zones.
          Used throughout geocoda for input data (sample locations), prediction
          grids, and zone boundaries in hierarchical models. Essential for
          spatial indexing and CRS transformations. Open access via https://doi.org/10.32614/RJ-2018-009}
}

@Manual{Beaudette2023,
  title = {soilDB: Soil Database Interface},
  author = {Dylan Beaudette and Jay Skovlin and Stephen Roecker and Andrew Brown},
  year = {2023},
  url = {https://CRAN.R-project.org/package=soilDB},
  note = {R package version 2.8.0. Enables live SSURGO/SDA database queries via
          gc_prepare_ssurgo_direct() and gc_fetch_sda_properties(). Provides access to
          USDA-NRCS soil survey data for integration with field observations. Critical for
          real-world applications combining survey maps with point samples. Implements SDA
          API access with caching and timeout options.}
}

@Article{PalareaaAlbaladejo2015,
  author = {Javier Palarea-Albaladejo and Josep Antoni Martín-Fernández},
  title = {zCompositions -- {R} package for multivariate imputation of left-censored data under a compositional approach},
  journal = {Chemometrics and Intelligent Laboratory Systems},
  year = {2015},
  volume = {143},
  pages = {85--96},
  doi = {10.1016/j.chemolab.2015.02.019},
  url = {https://doi.org/10.1016/j.chemolab.2015.02.019},
  note = {Theoretical foundation for zero/missing value handling in compositional
          data. Methods implemented in gc_handle_zeros() including multiplicative
          zero replacement (mzero), additive zero (azero), and log-ratio EM (lrem).
          Essential for edge-case handling where soil texture measurements contain
          trace components or detection limits. Open access via https://doi.org/10.1016/j.chemolab.2015.02.019}
}

@Manual{Genz2024,
  title = {mvtnorm: Multivariate Normal and t Distributions},
  author = {Alan Genz and Frank Bretz and Tetsuhisa Miwa and Xuefei Mi and
            Friedrich Leisch and Fabian Scheipl and Torsten Hothorn},
